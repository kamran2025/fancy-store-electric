<body>

  <!--PreLoader-->
  <div class="loader">
    <div class="loader-inner">
      <div class="circle"></div>
    </div>
  </div>
  <!--PreLoader Ends-->

  <!-- header -->
  <%- include('header') %>
    <!-- end header -->

    <!-- hero area -->
    <div class="hero-area hero-bg">
      <div class="container-fluid container-lg">
        <div class="row">
          <div class="col-12 text-center" style="z-index: 99;">
            <div class="hero-text">
              <div class="hero-text-tablecell">
                <p class="subtitle">your home is your world</p>
                <h1>Make the world shine</h1>
                <div class="hero-btns">
                  <a href="/products" class="boxed-btn">View All Products</a>
                  <a href="https://wa.me/+918902479618" class="bordered-btn">Contact Us</a>
                </div>
              </div>
            </div>
          </div>
          <img src="assets/img/lamp.png" alt="img" width="350" height="350"
            style="position: absolute; bottom: 22%; right: 13%; opacity: 80%; z-index: 2;"
            class="hero-lamp-img align-self-center">
        </div>
      </div>
    </div>
    <!-- end hero area -->

    <!-- features list section -->
    <div class="list-section pt-80 pb-80">
      <div class="container">

        <div class="row">
          <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
            <div class="list-box d-flex align-items-center">
              <div class="list-icon">
                <i class="fas fa-shipping-fast"></i>
              </div>
              <div class="content">
                <h3>Free Shipping</h3>
                <p>When order over <span style="font-size: 18px;padding-right: 1px;">â‚¹</span>9999</p>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
            <div class="list-box d-flex align-items-center">
              <div class="list-icon">
                <i class="fas fa-phone-volume"></i>
              </div>
              <div class="content">
                <h3>24/7 Support</h3>
                <p>Get support all day</p>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="list-box d-flex justify-content-start align-items-center">
              <div class="list-icon">
                <i class="fas fa-sync"></i>
              </div>
              <div class="content">
                <h3>Refund</h3>
                <p>Get refund within 3 days!</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
    <!-- end features list section -->

    <!-- product section -->
    <div class="product-section mt-150 mb-150">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 offset-lg-2 text-center">
            <div class="section-title">
              <h3><span class="orange-text">Our</span> Products</h3>
            </div>
          </div>
        </div>
        <%- include('productCard') %>
      </div>
    </div>
    <!-- end product section -->

    <!-- cart banner section -->
    <% products.forEach(product=> { %>
      <% if (product.get('discountedPercent') && product.get('endDate')) { %>

        <section class="cart-banner pt-100 pb-100">
          <div class="container">
            <div class="row clearfix">
              <!--Image Column-->
              <div class="image-column col-lg-6">
                <div class="image">
                  <div class="price-box">
                    <div class="inner-price">
                      <span class="price">
                        <strong>
                          <%= product.get('discountedPercent') %> <br> off
                        </strong>
                      </span>
                    </div>
                  </div>
                  <a href="<%= product.get('title').replace(/\s+/g, '-' ).toLowerCase() %>/<%= product.get('id') %>">
                    <img src="<%= product.get('image') %>" id="proImg" alt="img">
                  </a>
                </div>
              </div>
              <!--Content Column-->
              <div class="content-column col-lg-6">
                <h3><span class="orange-text">Deal</span> of the month</h3>
                <h4>
                  <%= product.get('title') %>
                </h4>
                <div class="text">
                  <%= product.get('description') %>
                </div>
                <!--Countdown Timer-->
                <div class="time-counter">
                  <div class="time-countdown clearfix" data-countdown="2020/2/01">
                    <div class="counter-column">
                      <div class="inner"><span class="count">00</span>Days</div>
                    </div>
                    <div class="counter-column">
                      <div class="inner"><span class="count">00</span>Hours</div>
                    </div>
                    <div class="counter-column">
                      <div class="inner"><span class="count">00</span>Mins</div>
                    </div>
                    <div class="counter-column">
                      <div class="inner"><span class="count">00</span>Secs</div>
                    </div>
                  </div>
                </div>
                <p class="endDate d-none">
                  <%= product.get('endDate') %>
                </p>
                <a href="https://wa.me/+918902479618?text=I%20am%20interested%20in%20this%20product%0Ahttps://fancy-store.vercel.app/<%= product.get('title').replace(/\s+/g, '-' ).toLowerCase() %>/<%= product.get('id') %>" class="cart-btn px-5 mt-3">Order Now</a>
              </div>
            </div>
          </div>
        </section>
        <% } %>
          <% }) %>
            <!-- end cart banner section -->

            <!-- footer -->
            <%- include('footer') %>
              <!-- end footer -->

              <!-- All Scripts  -->
              <%- include('lib_js') %>

                <script>
                  let proDiscPrsnt = document.querySelector('#proImg');

                  let endDate = null;

                  function calculateCountdown(endDate) {
                    if (!endDate) {
                      return {
                        days: 0,
                        hours: 0,
                        minutes: 0,
                        seconds: 0
                      };
                    }

                    const now = new Date().getTime();
                    const targetDate = new Date(endDate).getTime();
                    const timeDifference = targetDate - now;

                    if (timeDifference <= 0) {
                      return {
                        days: 0,
                        hours: 0,
                        minutes: 0,
                        seconds: 0
                      };
                    }

                    const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

                    return {
                      days,
                      hours,
                      minutes,
                      seconds
                    };
                  }

                  function updateCountdown() {
                    const countdown = calculateCountdown(endDate);

                    let countdownWrapper = document.querySelectorAll('.count')
                    countdownWrapper[0].textContent = countdown.days;
                    countdownWrapper[1].textContent = countdown.hours;
                    countdownWrapper[2].textContent = countdown.minutes;
                    countdownWrapper[3].textContent = countdown.seconds;
                  }

                  let endDateValue = document.querySelector('.endDate').textContent;
                  function startCountdownInterval() {
                    if (endDate) {
                      updateCountdown();
                      setInterval(updateCountdown, 1000);
                    }
                  }

                  endDate = new Date(endDateValue).getTime();
                  startCountdownInterval();

                </script>

</body>

</html>